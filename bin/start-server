export PATH=/usr/local/jdk1.7-drop/bin:$PATH
export LANG=en_US.utf8
echo `date '+%d %B %Y, %r'` >> /var/cassandra/restart.hist
java -Xdebug -Xrunjdwp:transport=dt_socket,server=y,address=8888,suspend=n -Xms6G -Xmx6G -Xmn256M  -XX:SurvivorRatio=8 -XX:TargetSurvivorRatio=90 -XX:+AggressiveOpts -XX:+UseParNewGC -XX:+UseConcMarkSweepGC -XX:CMSInitiatingOccupancyFraction=1 -XX:+CMSParallelRemarkEnabled  -Dcom.sun.management.jmxremote.port=8080 -Dcom.sun.management.jmxremote.ssl=false -Dcom.sun.management.jmxremote.authenticate=false -Dcassandra -Dstorage-config="." -cp .:bin/j2ee.jar:bin/log4j-1.2.8.jar:bin/xerces.jar:bin/asm-all-2.2.1.jar:bin/libthrift.jar:bin/libfb303.jar:bin/cassandra.jar:bin/azul-collections.jar:bin/commons-math-1.1.jar:bin/zookeeper-2.2.0.jar com.facebook.infrastructure.service.CassandraImpl


